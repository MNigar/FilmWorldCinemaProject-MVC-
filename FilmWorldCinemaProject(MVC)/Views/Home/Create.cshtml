@model FilmWorldCinemaProject_MVC_.Models.FilmList

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Film.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Film.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Film.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    @*<label for="startDate">StartDate:</label>
    <input type="datetime-local" id="startDate" name="startDate">*@
    <div class="form-group">
        @Html.LabelFor(model => model.Film.PublicationDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Film.PublicationDate, new { htmlAttributes = new { @class = "form-control",type="datetime-local" } })
            @Html.ValidationMessageFor(model => model.Film.PublicationDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Film.Link, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Film.Link, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Film.Link, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Film.Duration, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Film.Duration, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Film.Duration, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">

        <label class="control-label col-md-2">
            Janr
        </label>
        <div class="col-md-10">

            <select class="form-control select2" name="Janrs[]" multiple>
                @foreach (var item in Model.Janrs)
                {
                    <option value="@item.Id">
                        @item.Name
                    </option>
                }
            </select>


        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">
            Ölkə
        </label>
        <div class="col-md-10">
            <select class="form-control select2" name="Countries[]" multiple>
                @foreach (var item in Model.Countries)
                {
                    <option value="@item.Id">
                        @item.Name
                    </option>
                }
            </select>

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    <h3> Last included movies list</h3>
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Film.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film.PublicationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film.Duration)
            </th>
            <th>
                Details
            </th>
        </tr>

        @foreach (var item in Model.Films)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublicationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>

                    @Html.ActionLink("Details", "Details", new { id = item.Id })

                </td>
            </tr>
        }

    </table>

</div>

}
   

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
