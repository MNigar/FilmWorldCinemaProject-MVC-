@model FilmWorldCinemaProject_MVC_.Models.DbModel.CinemaHall

@{
    ViewBag.Title = "CreateHallCinema";
}

<h2>CreateHallCinema</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>CinemaHall</h4>
    <hr />
    <div class="form-group">
        <span class="control-label col-md-2"> Cinema</span>
        <div class="col-md-10">

            <select class="form-control select2" name="cinema" required>
                @foreach (var item in ViewBag.Cinema)
                {

                    <option value="@item.Id">
                        @item.Name
                    </option>
                }

            </select>



        </div>
    </div>
    <div class="form-group">
        <span class="control-label col-md-2"> Hall</span>
        <div class="col-md-10">

            <select class="form-control select2" name="halls[]" multiple required>
                @foreach (var item in ViewBag.Hall)
                {

                    <option value="@item.Id">
                        @item.Name
                    </option>
                }

            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    @if (Session["CinemaHallError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            This hall already exist in cinema
        </div>
        Session["CinemaHallError"] = null;
    }
</div>
    }

    <div>
        @Html.ActionLink("Back to List", "HallCinemaList")
    </div>
