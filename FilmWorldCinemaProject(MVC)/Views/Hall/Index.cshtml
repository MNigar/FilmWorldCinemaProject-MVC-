@model IEnumerable<FilmWorldCinemaProject_MVC_.Models.DbModel.Hall>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.CinemaId)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.CinemaId)*@
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })">
                    <i class="fas fa-edit" style="font-size:30px;"></i>

                </a>

              
                <a  onclick="return confirm('Eminsinizmi?')" href="@Url.Action("Delete", new { id = item.Id })">
                    <i class="far fa-trash-alt" style="font-size:30px;"></i>

                </a>
            </td>
        </tr>
    }

</table>
